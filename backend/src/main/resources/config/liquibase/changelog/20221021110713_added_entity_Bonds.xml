<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity Bonds.
    -->
    <changeSet id="20221021110713-1" author="jhipster">
        <createTable tableName="bonds">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="quantity" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="current_price" type="${floatType}">
                <constraints nullable="true" />
            </column>
            <column name="interest_rate" type="${floatType}">
                <constraints nullable="true" />
            </column>
            <column name="duration_months" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="bond_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="jhi_exchange" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
</databaseChangeLog>
